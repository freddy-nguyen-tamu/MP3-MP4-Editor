{
  "name": "ultimate-mp3-mp4-editor",
  "version": "1.0.0",
  "description": "Production-ready desktop app for cutting and merging MP3/MP4 files with timeline UI",
  "main": "dist/main/main.js",
  "author": "Your Name",
  "license": "MIT",
  "scripts": {
    "dev": "node check-ffmpeg.js && node start-dev-fixed.js",
    "dev:old": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:renderer": "vite",
    "dev:main": "tsc -p tsconfig.main.json && electron .",
    "check-ffmpeg": "node check-ffmpeg.js",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "package:mac": "npm run build && electron-builder --mac",
    "test": "jest",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "fluent-ffmpeg": "^2.1.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.7",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.28.0"
  },
  "build": {
    "appId": "com.ultimateeditor.app",
    "productName": "Ultimate MP3/MP4 Editor",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "resources/ffmpeg",
        "to": "ffmpeg",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": ["nsis"],
      "icon": "resources/icon.ico"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "resources/icon.icns",
      "category": "public.app-category.video"
    },
    "linux": {
      "target": ["AppImage"],
      "category": "AudioVideo"
    }
  }
}
